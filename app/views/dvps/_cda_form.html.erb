<a href='#dvp-<%= item.id%> ' role='button'  data-toggle='modal'>
   <%= icon_style %>
 </a>
<!-- CDA form  -->
<div id='<%= "dvp-#{item.id}" %>' class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h3 id="myModalLabel"><%= item %> </h3>
	</div>
	<div class="modal-body">

		<%= simple_form_for(item.testings.build) do |f| %>
		<%= f.error_notification %>
		<div class="form-inputs">
			<%= f.association :dvp, :as => :hidden %>
			<%= f.input :request_comment,:label => 'Comment', :hint => 'Optional' %>
		</div>
		<input type="hidden" name='return_uri' value='<%= request.path %> '>
		<div class="form-actions">
			<%= f.button :submit %>
		</div>
		<% end %>
	</div>
</div>
<!-- CDA form end -->

